// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model post {
  id        Int         @id @default(autoincrement())
  slug      String      @unique
  views     Int
  comment   comment[]
  infaq     infaq[]
  infaq_trf infaq_trf[]
}

model comment {
  id         Int      @id @default(autoincrement())
  post       post     @relation(fields: [post_slug], references: [slug])
  post_slug  String
  date       DateTime @default(now())
  name       String
  avatar_url String
  content    String
}

model infaq {
  id    Int    @id @default(autoincrement())
  post  post   @relation(fields: [slug], references: [slug])
  slug  String
  max   Int    @default(0)
  value Int    @default(0)
}

model infaq_trf {
  id     Int      @id @default(autoincrement())
  infaq  post     @relation(fields: [slug], references: [slug])
  slug   String
  nama   String
  bank   String
  date   DateTime @default(now())
  jumlah Int
}
